<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="First year Curriculam"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Rules for obtaining Certificate"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Performa for Ph.D Registration"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card4"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Hostel Allotment Form"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Notice for Day Scholars"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card6"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Affidavit by Student"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#f4f1f1"
            android:layout_margin="20dp"
            android:id="@+id/card7"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Affidavit by Parent"/>

        </android.support.v7.widget.CardView>







    </LinearLayout>

</ScrollView>